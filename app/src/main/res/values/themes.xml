<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskMaster" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TaskMaster" parent="Base.Theme.TaskMaster" />

    <!-- Créer le composant pour le grand titre -->
    <style name="grand_titre">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le titre du login -->
    <style name="titre_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le titre -->
    <style name="titre_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le titre simple -->
    <style name="titre_simple_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!-- Créer le composant pour le texte -->
    <style name="text_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le texte blanc -->
    <style name="text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le sous texte -->
    <style name="sub_text_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le sous texte blanc -->
    <style name="sub_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le mini texte -->
    <style name="mini_text_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le mini texte -->
    <style name="mini_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <!-- Créer le composant pour le texte regular -->
    <style name="text_simple">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!-- Créer le composant pour le sous texte -->
    <style name="sub_text_simple">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!-- Créer le composant pour le mini texte -->
    <style name="mini_text_simple">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!-- Créer le composant pour le mini texte -->
    <style name="mini_text_simple_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <!-- Personnaliser la barre de navigation-->
    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/product_sans_regular</item>
    </style>

</resources>